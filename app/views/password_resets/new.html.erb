<% provide(:title, "Εξίασα το κωδικό")%>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
    <%= f.label :email, "Ηλεκτρονική Διεύθυνση" %>
    <%= f.email_field :email, class: 'form-control' %>
    <%= f.submit "Επαναφορά", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
